<!DOCTYPE html>
<html lang="id">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Kontak - Dunia Bioskop</title>
        <!-- CSS -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    </head>

    <body>
        <div class="cinema-background"></div>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark">
            <a class="navbar-brand animate__animated animate__fadeIn d-flex align-items-center" href="<%= url %>">
                <img src="https://i.pinimg.com/736x/1c/c4/c9/1cc4c9eb92e33ecb9239635bab7a5428.jpg" alt="Logo Bioskop" style="height: 40px; margin-right: 10px;">
                Dunia Bioskop
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeInDown" href="<%= url %>">
                            <i class="fa fa-home"></i> Beranda
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link animate__animated animate__fadeInDown" href="<%= url %>contact">
                            <i class="fa fa-address-book"></i> Kontak
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link animate__animated animate__fadeInDown" href="<%= url %>profile">
                            <i class="fa fa-user"></i> Profil
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div class="container mt-5 pt-5">
            <div class="content-card">
                <h1 class="cinema-title mb-4"><i class="fa fa-address-book"></i> Daftar Kontak</h1>
                <a href="<%= url + 'contact/add' %>" class="btn btn-primary cinema-btn mb-3">
                    <i class="fa fa-plus"></i> Tambah Kontak
                </a>
                <div class="table-responsive">
                    <table class="table table-dark table-bordered">
                        <thead>
                            <tr>
                                <th>Nama</th>
                                <th>Email</th>
                                <th>Telepon</th>
                                <th>Alamat</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (contacts.length > 0) { %>
                                <% contacts.forEach(contact => { %>
                                    <tr>
                                        <td><%= contact.nama %></td>
                                        <td><%= contact.email %></td>
                                        <td><%= contact.phone %></td>
                                        <td><%= contact.address %></td>
                                        <td>
                                            <a href="<%= url + 'contact/edit/' + contact.id %>" class="btn btn-warning btn-sm cinema-btn-sm">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                            <a href="<%= url + 'contact/delete/' + contact.id %>" class="btn btn-danger btn-sm cinema-btn-sm"
                                                onclick="return confirm('Apakah Anda yakin ingin menghapus kontak ini?')">
                                                <i class="fa fa-trash"></i> Hapus
                                            </a>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="5" class="text-center">Tidak Ada Data</td>
                                </tr>
                            <% } %>
                        </tbody>                
                    </table>
                </div>
            </div>
        </div>

        <!-- JS -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
            integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
            crossorigin="anonymous"></script>

        <style>
            @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

            body, html {
                font-family: 'Poppins', sans-serif;
                background-color: #141414;
                color: #ffffff;
                min-height: 100vh;
            }

            .cinema-background {
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.8)),
                            url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80');
                background-size: cover;
                background-position: center;
                z-index: -1;
            }

            .navbar {
                background: rgba(0, 0, 0, 0.9);
                padding: 1rem 2rem;
            }

            .cinema-title {
                color: #3498db;
                font-weight: 600;
                text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            }

            .content-card {
                background: rgba(0, 0, 0, 0.75);
                padding: 2rem;
                border-radius: 10px;
                box-shadow: 0 0 20px rgba(0,0,0,0.5);
            }

            .table {
                background: rgba(0, 0, 0, 0.5);
            }

            .cinema-btn {
                transition: all 0.3s ease;
                text-transform: uppercase;
                letter-spacing: 1px;
            }

            .cinema-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(52,152,219,0.3);
            }

            .cinema-btn-sm {
                transition: all 0.3s ease;
                margin: 0 2px;
            }

            .cinema-btn-sm:hover {
                transform: translateY(-1px);
            }

            .btn-primary {
                background-color: #3498db;
                border-color: #3498db;
            }

            .nav-link {
                color: #ffffff !important;
                margin: 0 5px;
            }

            .nav-link:hover {
                color: #3498db !important;
            }

            .nav-item.active .nav-link {
                color: #3498db !important;
            }
        </style>
    </body>

</html>